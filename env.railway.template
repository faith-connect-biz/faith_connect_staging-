# Railway Production Environment Variables
# Copy this to your Railway project variables

# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this
DEBUG=False
DJANGO_SETTINGS_MODULE=core.settings.railway
ENVIRONMENT=production

# Database (Railway will provide this)
DATABASE_URL=postgresql://username:password@host:port/database

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Email Configuration (ZeptoMail)
EMAIL_HOST=smtp.zeptomail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-zeptomail-username
EMAIL_HOST_PASSWORD=your-zeptomail-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# SMS Configuration (Ndovubase)
SMS_API_KEY=your-ndovubase-api-key
SMS_API_URL=https://api.ndovubase.com/sms/send
SMS_SENDER_ID=FEMDIR

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://yourdomain.com

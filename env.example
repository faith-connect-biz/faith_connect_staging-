# Environment Variables for Faith Connect Business Directory

# App Configuration
VITE_APP_NAME=Faith Connect Business Directory
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_JWT_STORAGE_KEY=faith_connect_token
VITE_REFRESH_TOKEN_KEY=faith_connect_refresh_token

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MAINTENANCE_MODE=false

# External Services
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_STRIPE_PUBLISHABLE_KEY=

# Development
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_SOURCE_MAPS=true 
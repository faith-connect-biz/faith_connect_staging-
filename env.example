# Django Settings
ENVIRONMENT=dev
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration (ZeptoMail)
ZEPTO_SEND_MAIL_TOKEN=your-zeptomail-send-mail-token-here
ZEPTO_DOMAIN=your-zeptomail-domain-here

# SMS Configuration (Ndovubase)
NDOVU_API_KEY=your-ndovu-api-key-here
NDOVU_SENDER_ID=your-sender-id-here

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=5
JWT_REFRESH_TOKEN_LIFETIME=1

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles/

{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python manage.py collectstatic --noinput && gunicorn core.wsgi:application --bind 0.0.0.0:$PORT",
    "healthcheckPath": "/api/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "DJANGO_SETTINGS_MODULE": "core.settings.railway",
    "ENVIRONMENT": "railway",
    "SECRET_KEY": "django-insecure-railway-deployment-key-change-in-production",
    "DEBUG": "False"
  }
}
